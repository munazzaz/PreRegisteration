generator client {
  provider = "prisma-client-js"
  output   = "node_modules/@prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model PreRegistration {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  city         String
  zip          String?
  role         Role
  businessName String
  contact      String
  state        String
  createdAt    DateTime @default(now())
}

enum Role {
  VENDOR
  SUPPORTER
}
